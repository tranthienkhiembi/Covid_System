<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-5 login-sec" style="margin-top: 130px;">
        <h2 class="text-center">System account</h2>
        <br>
        <form method="GET">
          <label class="sr-only" for="money"></label>
          <div class="input-group mb-2" style="margin-left:30px">
            <div class="form-group">
              <label class="text2">Account number:</label>
              <div class="input-group" >
                <input type="text" readonly class="form-control balance" name="balance" value="{{Id}}" style="color: #026b4c;" >
              </div>
            </div>
            <div class="form-group">
              <label class="text2">Balance:</label>
              <div class="input-group">
                <input type="text" readonly class="form-control balance" name="balance" value="{{balance}}" style="color: #026b4c;">
