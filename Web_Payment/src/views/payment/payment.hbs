<style>
  @import url("//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css");

  .login-block {
    background: #41F65C;
    
    background: -webkit-linear-gradient(to bottom, #2ADBD0, #41F65C);
    
    background: linear-gradient(to bottom, #2ADBD0, #41F65C);
    
    float: left;
    width: 100%;
    width: 100%;
    height: 100%;
    padding: 50px 0;
  }

  .banner-sec {
    background: url(/assets/login/images/ic_system.png);
    background-size: auto;
    background-repeat: no-repeat;
    min-height: 650px;
    margin-top: 50px;
    border-radius: 0 10px 10px 0;

  }

  .container {
    background: rgba(254, 255, 254, 0.75);
    border-radius: 10px;
    box-shadow: 15px 20px 0px rgba(0, 0, 0, 0.1);
    border-radius: 20px;
  }

  .carousel-inner {
    border-radius: 0 10px 10px 0;
  }

  .carousel-caption {
    text-align: left;
    left: 5%;
  }

  .login-sec {
    padding: 20px 70px;
    position: relative;
  }

  .login-sec .copy-text {
    position: absolute;
    width: 80%;
    bottom: 20px;
    font-size: 13px;
    text-align: center;
  }

  .login-sec .copy-text i {
    color: #2eb78e;
  }

  .login-sec .copy-text a {
    color: #2eb78e;
  }

  .login-sec h2 {
    margin-bottom: 30px;
    font-weight: 800;
    font-size: 30px;
    color: #2eb78e;
  }

  .login-sec h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #2eb78e;
