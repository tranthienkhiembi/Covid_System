<div id="content" style="margin:40px 200px 40px;">
    <div class="card border" style="border: #7af1e7 solid 3px; background-color:#7af1e7; border-radius:20px" >
  <div class="card-header text-center bg-linear" style="border-top-left-radius: 20px; border-top-right-radius: 20px">
    <h4 ="font-size: 25px;"><strong>Edit location</strong></h4>
  </div>
  <div class="card-body">
    <form method="POST">
        <div class="form-group">
        <label for="txtPlaceID">ID</label>
        <input
          type="text"
          class="form-control"
          id="txtPlaceID"
          name="txtPlaceID"
          value="{{this.place.Id}}"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="txtNamePlace">Place name</label>
        <input
          type="text"
          class="form-control"
          id="txtNamePlace"
          name="txtNamePlace"
          value="{{this.place.NamePlace}}"
          {{#unless error}}
            autofocus
          {{/unless}}
        />
      </div>
      <div class="form-group {{#if error}}ui-state-error{{/if}}">
        <label for="txtSize">Capacity</label>
        <input
          type="number"
          class="form-control"
          id="txtSize"
          name="txtSize"
          value="{{this.place.Size}}"
        />
      </div>

       <div class="form-group {{#if error}}ui-state-error{{/if}}">
        <label for="txtAmount">Current number of patients</label>
        {{#if error}}
            <h6 style="color: red;">Error: Current number of patients > Capacity</h6>
        {{/if}}
        <input
          type="number"
          class="form-control" 
          id="txtAmount"
          name="txtAmount"
          value="{{this.place.Amount}}"
        {{#if error}}autofocus{{/if}}
        />
      </div>
       <div class="form-group">
        <label for="txtRole">Area <span style="color: orange;">(0: Isolation, 1: Treatment)</span></label>
        <input
          type="number"
          class="form-control"
          id="txtRole"
          name="txtRole"
          value="{{this.place.Role}}"
          readonly
        />
      </div>
      <a
        class="btn btn-primary"
        href="/admin/places?page={{page}}"
        title="Back to list"
        role="button"
      >
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </a>
      <button type="submit" class="btn btn-success"
      title="update" formaction="/admin/places/update?page={{page}}">
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
</div>
</div>

