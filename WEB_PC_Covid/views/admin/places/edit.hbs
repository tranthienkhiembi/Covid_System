<div id="content" style="margin:40px 200px 40px;">
    <div class="card border border-dark" >
  <div class="card-header text-center">
    <h4>Chỉnh sửa địa điểm</h4>
  </div>
  <div class="card-body">
    <form method="POST">
        <div class="form-group">
        <label for="txtPlaceID">ID</label>
        <input
          type="text"
          class="form-control"
          id="txtPlaceID"
          name="txtPlaceID"
          value="{{this.place.Id}}"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="txtNamePlace">Tên địa điểm</label>
        <input
          type="text"
          class="form-control"
          id="txtNamePlace"
          name="txtNamePlace"
          value="{{this.place.NamePlace}}"
          {{#unless error}}
            autofocus
          {{/unless}}
        />
      </div>
      <div class="form-group {{#if error}}ui-state-error{{/if}}">
        <label for="txtSize">Sức chứa</label>
        <input
          type="number"
          class="form-control"
          id="txtSize"
          name="txtSize"
          value="{{this.place.Size}}"
        />
      </div>

       <div class="form-group {{#if error}}ui-state-error{{/if}}">
        <label for="txtAmount">Số lượng tiếp nhận hiện tại</label>
        {{#if error}}
            <h6 style="color: red;">Lỗi: Số lượng tiếp nhận hiện tại < sức chứa</h6>
        {{/if}}
        <input
          type="number"
          class="form-control" 
          id="txtAmount"
          name="txtAmount"
          value="{{this.place.Amount}}"
        {{#if error}}autofocus{{/if}}
        />
      </div>
       <div class="form-group">
        <label for="txtRole">Khu (0: Cách ly, 1: Điều trị)</label>
        <input
          type="number"
          class="form-control"
          id="txtRole"
          name="txtRole"
          value="{{this.place.Role}}"
          readonly
        />
      </div>
      <a
        class="btn btn-success"
        href="/admin/places?page={{page}}"
        title="Back to list"
        role="button"
      >
        <i class="fa fa-backward" aria-hidden="true"></i>
      </a>
      <button type="submit" class="btn btn-primary"
      title="update" formaction="/admin/places/update?page={{page}}">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
  </div>
  <div class="card-footer text-muted">
    Footer
  </div>
</div>
</div>

{{#section 'css'}}
  <!-- Jquery ui CSS -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="/assets/css/navBar.css">
    <link href='https://fonts.googleapis.com/css?family=Mulish' rel='stylesheet'>
    <!-- Font Awesome JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
    <style>
        .ui-state-error {
        padding: .3em;
    }
    </style>
{{/section}}

