<div id="account">
    <div class="card" style="border: black solid 2px;">
        <div class="card-header text-center">
            <div class="row align-items-center">
                 <div class="col-md-2">
                    <a class="btn btn-primary float-left" style="color:white;" title="Quay lại" href='{{pathOld}}'
                        role="button">
                        <i class="fa fa-angle-left" aria-hidden="true"></i> 
                    </a>
                </div>
                <div class="col-md-8">
                    <i class="fa fa-user" aria-hidden="true" style="font-size: 25px;"></i>
                    <b style="font-size: 25px;">Lịch sử hoạt động của {{username}}</b>
                </div>
               
            </div>
        </div>
         {{#if this.empty}}
            <div class="card-body">
                <p class="card-text">Không có dữ liệu.</p>
            </div>
        {{else}}
            <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Hoạt động</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.activityManagers}}
                        <tr>
                        <th scope="row">{{Stt}}</th>
                        <td>{{Activity}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
         {{/if}}
            <nav aria-label="..." class="mx-auto">
            <ul class="pagination mx-auto">
                <li class="page-item  {{#unless can_go_prev}} disabled {{/unless}}">
                <a class="page-link" href="?id={{id}}&&page={{prev_value}}&&username={{username}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
                </li>
                {{#each this.page_items }}
                    {{#if isActive}}
                        <li class="page-item active" aria-current="page">
                        <span class="page-link">{{value}}</span>
                        </li>
                    {{else}} 
                        <li class="page-item {{#if isDisabled}} disabled {{/if}}"><a class="page-link" href="?id={{../id}}&&page={{value}}&&username={{../username}}">{{value}}</a></li>
                    {{/if}}
                {{/each}}
                 <li class="page-item  {{#unless can_go_next}} disabled {{/unless}}">
                     <a class="page-link" href="?id={{id}}&&page={{next_value}}&&username={{username}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li> 
            </ul>
        </nav>
    </div>
</div>

