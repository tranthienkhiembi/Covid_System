<style>
    .btn-login {
        background: #DE6262;
        color: #fff;
        font-weight: 600;
    }

    .text2 {
        margin-bottom: 10px;
        font-weight: 700;
        font-size: 17px;
        color: #3352db;
    }
</style>

<div id="content">
    <div class="card">
        <div class="card-header">
            <link rel="stylesheet" href="/assets/css/tooplate-main.css">
            <div class="featured-page">
                <div class="container" style="margin-top: -100px;">
                    <div class="row navbar navbar-expand-lg bg-linear">
                        <div class="col-md-3 col-sm-12">
                            <div class="section-heading">
                                <div class="line-dec"></div>
                                <h1>USER INFORMATION</h1>
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-12">
                            <div id="filters" class="button-group" style="margin-right: 20px;">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    {{#if isInform}}
                                    <a tabindex="0" class="btn btn-lg btn-danger btn-login" role="button"
                                        data-bs-toggle="popover" data-bs-trigger="focus" title="Payment Notifications"
                                        data-bs-content="{{inform}}"><i class="far fa-bell"></i></a>
                                    {{/if}}
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleManage">Managed History</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleProduct">Consumption history of the necessities package</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleDebt">Debt</button>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#examplePay">History payment</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="container" style="margin-top: 10px;">
                <div class="row">
                    <div class="col-11 mx-auto profile">
                        <div class="py-3 px-2 px-lg-4 py-lg-5">
                            <div class="row">
                                <div class="avatarBox col-12 col-lg-5" align="center" style="margin-left: -30px;">
                                    <img src="https://thelifetank.com/wp-content/uploads/2018/08/avatar-default-icon.png"
                                        class="img-fluid" width="200">
                                    <hr>
                                    <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                        data-bs-target="#exampleChangePwd">Thay đổi mật khẩu</button>
                                </div>
                                <div class="infoBox col-12 col-lg-6 mt-2 mt-lg-0">
                                    <table class="table" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.profile}}
                                            <tr>
                                                <th scope="row" class="text2">Họ và tên:</th>
                                                <th scope="row">{{Name}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="text2">Năm:</th>
                                                <th scope="row">{{Year}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="text2">Địa điểm điều trị:</th>
                                                <th scope="row">{{NamePlace}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="text2">Tiền nợ:</th>
                                                <th scope="row">{{Debt}}</th>
                                            </tr>
                                            <tr>
                                                <th scope="row" class="text2">Tài khoản thanh toán:</th>
                                                <th scope="row">{{IdPayment}}</th>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleManage" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form>
                    <div class="text-center" style="margin-top: 10px;">
                        <h5 class="modal-title" id="exampleModalLabel">Lịch sử được quản lý</h5>
                    </div>
                    {{#if this.empty}}
                    <div class="card-body">
                        <p class="card-text">No data now.</p>
                    </div>
                    {{else}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">No</th>
                                <th scope="col">Tên người quản lý</th>
                                <th scope="col">TimeStart</th>
                                <th scope="col">TimeEnd</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.HistoryManager}}
                            <tr>
                                <th scope="row" class="text-center">{{STT}}</th>
                                {{#each Username}}
                                <td>{{Username}}</td>
                                {{/each}}
                                <td>{{TimeStart}}</td>
                                <td>{{TimeEnd}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{/if}}
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">Lịch sử tiêu thụ gói Nhu yếu phẩm</h5>
                </div>
                <form>
                    <div class="modal-body">
                        {{#if this.empty1}}
                        <div class="card-body">
                            <p class="card-text">No data now.</p>
                        </div>
                        {{else}}
                        <table class="table table-light table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Tên gói</th>
                                    <th scope="col">Ngày tiêu thụ</th>
                                </tr>
                            </thead>
                            {{#each historyPackage}}
                            <tbody>
                                <tr>
                                    <th scope="row">{{STT}}</th>
                                    <td>{{NamePackage}}</td>
                                    <td>{{Time}}</td>
                                </tr>
                            </tbody>
                            {{/each}}
                        </table>
                        {{/if}}
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleDebt" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">XEM DƯ NỢ</h5>
                </div>
                <br>
                <form>
                    <div class="modal-body">
                        <div class="text2">Số dư nợ: {{DebtUser}} VNĐ</div>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="examplePay" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="text-center" style="margin-top: 10px;">
                    <h5 class="modal-title" id="exampleModalLabel">Lịch sử thanh toán</h5>
                </div>
                <form method="post" action="/add">
                    <div class="modal-body">
                        {{#if this.emptyPayment}}
                            <div class="card-body">
                                <p class="card-text">No data now.</p>
                            </div>
                        {{else}}
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Customer name</th>
                                    <th scope="col">Tên gói nhu yếu</th>
                                    <th scope="col">Thời gian mua</th>
                                    <th scope="col">Status</th>
                                </tr>

                            </thead>
                            <tbody>
                                {{#each HistoryPayment}}
                                    <tr>
                                        <th scope="row">{{STT}}</th>
                                        <td>{{NameUser}}</td>
                                        <td>{{NamePackage}}</td>
                                        <td>{{TimeBuy}}</td>
                                        <td>{{Status}}</td>
                                    </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleChangePwd" tabindex="-1" aria-labelledby="addProductLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thay đổi mật khẩu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="login-form">
                            {{#if msg}}
                            <div class="form-group col-md-12 mx-auto text-center">
                                <div class="alert alert-danger alert-dismissible fade show" role="alert"
                                    id="MessageValidate">{{msg}}</div>
                            </div>
                            {{/if}}
                            <br>
                            <div class="form-group">
                                <label for="exampleInputNewPassword">Mật khẩu mới:</label>
                                <input type="password" class="form-control box-input" placeholder="Password" id="newPWd"
                                    name="newPwd">
                            </div>
                            <br>
                            <div class="form-group">
                                <label for="exampleInputNewPassword2 box-input">Xác nhận mật khẩu:</label>
                                <input type="password" class="form-control" placeholder="Password" id="newPWd2"
                                    name="newPwd2">
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-9 col-sm-12">
                                    <a role="button" class="btn btn-danger float-right" href="pay/payDetail">Liên kết
                                        ngân hàng</a>
                                </div>
                                <div class="col-md-3 col-sm-12">
                                    <button type="submit" class="btn btn-login float-right" formaction="/user/profile"
                                        formmethod="post">Thay đổi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

