<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<title>Internet Banking</title>
<style>
  @import url("//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css");

  .login-block {
    background: #DE6262;
    /* fallback for old browsers */
    background: -webkit-linear-gradient(to bottom, #FFB88C, #DE6262);
    /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to bottom, #FFB88C, #DE6262);
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    float: left;
    width: 100%;
    width: 100%;
    padding: 50px 0;
  }

  .banner-sec {
    background: url(/assets/login/images/logo_pay.jpg);
    background-size: auto;
    background-repeat: no-repeat;
    min-height: 650px;
    border-radius: 0 10px 10px 0;
    padding: 0;
  }

  .container {
    background: #fff;
    border-radius: 10px;
    box-shadow: 15px 20px 0px rgba(0, 0, 0, 0.1);
  }

  .carousel-inner {
    border-radius: 0 10px 10px 0;
  }

  .carousel-caption {
    text-align: left;
    left: 5%;
  }

  .login-sec {
    padding: 50px 70px;
    position: relative;
  }

  .login-sec .copy-text {
    position: absolute;
    width: 80%;
    bottom: 20px;
    font-size: 13px;
    text-align: center;
  }

  .login-sec .copy-text i {
    color: #FEB58A;
  }

  .login-sec .copy-text a {
    color: #E36262;
  }

  .login-sec h2 {
    margin-bottom: 30px;
    font-weight: 800;
    font-size: 30px;
    color: #DE6262;
  }

  .login-sec h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #FEB58A;
    display: block;
    margin-top: 20px;
    border-radius: 3px;
    margin-left: auto;
    margin-right: auto
  }

  .btn-login {
    background: #DE6262;
    color: #fff;
    font-weight: 600;
  }

  .banner-text {
    width: 70%;
    position: absolute;
    bottom: 40px;
    padding-left: 20px;
  }

  .banner-text h2 {
    color: #fff;
    font-weight: 600;
  }

  .banner-text h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #FFF;
    display: block;
    margin-top: 20px;
    border-radius: 3px;
  }

  .banner-text p {
    color: #fff;
  }
</style>
<section class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-5 login-sec">
        <h2 class="text-center">Thay đổi mật khẩu</h2>
        <form class="login-form">
          {{#if msg}}
          <div class="form-group col-md-12 mx-auto text-center">
            <div class="alert alert-danger" role="alert" id="MessageValidate">{{msg}}</div>
          </div>
          {{/if}}
          <div class="form-group">
            <label for="exampleInputPassword1">Mật khẩu cũ:</label>
            <input type="password" class="form-control box-input" id="oldPass" placeholder="Password" name="oldPass">
          </div>

          <div class="form-group">
            <label for="exampleInputNewPassword">Mật khẩu mới:</label>
            <input type="password" class="form-control box-input" id="newPass" placeholder="Password" name="newPass">
          </div>

          <div class="form-group">
            <label for="exampleInputNewPassword2">Xác nhận mật khẩu:</label>
            <input type="password" class="form-control box-input" id="verifyPass" placeholder="Password"
              name="verifyPass">
          </div>

          <div class="form-check">
            <button type="submit" class="btn btn-login float-right" id="change-btn" formaction="/user/pay/changePass"
              formmethod="post">Change</button>
          </div>
        </form>
      </div>
      <div class="col-md-7 banner-sec">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item">
              <img class="d-block img-fluid" src="/assets/login/images/logo_pay.jpg" width="100px" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center mx-auto">
            <h1 class="fa fa-check-circle-o" style="color: green; width: 100px" aria-hidden="true"></h1>
          </div>
          <div class="modal-body">
            <h3 class="text-center">Đổi mật khẩu thành công!</h3>
          </div>
          <div class="modal-footer">
            <form action="/user/pay/payment" method="get">
              <button class="btn btn-success btn-block" type="submit">OK</button>
            </form>
          </div>
        </div>
      </div>
    </div>
</section>

<script>
  function isValidate() {
    if ($('#oldPass').val().length == 0 || $('#newPass').val().length == 0 || $('#verifyPass').val().length == 0) {
      return false;
    }
    return true;
  }
  $('#change-btn').prop('disabled', true);
  $('.box-input').each(() => {
    $(this).keyup(function () {
      if (isValidate()) {
        $('#change-btn').prop('disabled', false);
      }
      else {
        $('#change-btn').prop('disabled', true);
      }
    });
  })
  $('#oldPass').focus(() => {
    $('#MessageValidate').hide();
  });
  {{#if alert }}
  $("#exampleModal").modal('show');
  {{/if}}


</script>