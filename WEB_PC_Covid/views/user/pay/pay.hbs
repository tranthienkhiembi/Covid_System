<div id="content">
    <div class="card" style="margin-top: 10px; border-radius:20px">
        <div class="card-header" style="margin-top:12px;  margin-left:20px">
            <link rel="stylesheet" href="/assets/css/tooplate-main.css">
            <!-- Items Starts Here -->
            <div class="featured-page" style="margin-top: -5px;">
                <div class="container">
                    <div class="row navbar navbar-expand-lg bg-linear" style="width: 100%; height: 75px;">
                        <div class="col-md-9 col-sm-12">
                            <div class="section-heading">
                                
                                <h1>Payment cost</h1>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12" style="padding-left: 6.5em;">
                            <a role="button" class="btn btn-danger float-right" href="pay/payDetail">Connect banking</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row d-flex justify-content-between">
                <form method="get">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Customer name</th>
                                <th scope="col">Package of necessities</th>
                                <th scope="col">Purchase date</th>
                                <th scope="col">Price(VNĐ)</th>
                                <th> </th>
                            </tr>
                        </thead>
                        {{#if empty}}
                        <tbody>
                            <tr>
                                <td colspan="5">
                                    Empty
                                </td>
                            </tr>
                        </tbody>
                        {{else}}
                        {{#each this.consume}}
                        <tbody>
                            <tr>
                                <th scope="row">{{STT}}</th>
                                <td>{{NameUser}}</td>
                                <td>{{NamePackage}}</td>
                                <td>{{Time}}</td>
                                <td>{{format_number Price}} VNĐ</td>
                                <td>
                                    <button type="submit" class="btn btn-outline-info btn-sm float-right"
                                        formaction="pay/payDetail/{{Id}}">Pay</button>
                                </td>
                            </tr>
                        </tbody>
                        {{/each}}
                        {{/if}}
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/public/assets/js/jquery.min.js"></script>
<!-- Featred Page Ends Here -->
</div>

