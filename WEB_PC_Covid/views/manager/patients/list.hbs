<!-- Page Content  -->
<div id="content">
    <div class="card">
        <div class="card-header">
            <nav class="navbar navbar-expand-lg bg-linear">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/manager/packets" style="color: white;">List of people involved</a>
                    <form class="d-flex" method="get">
                    </form>
                </div>
            </nav>
        </div>
<div id="content">
    <div class="row">
        <div class="col-md-8 mr-auto">
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2 w-75 search-box" name="search" type="text" placeholder="" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0 btn-search" type="submit"
                    formaction="/manager/patients/search">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Search
                </button>
            </form>
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="addPatient" data-toggle="modal"
                data-target="#addF0">
                <i class=" fa fa-user-plus" aria-hidden="true"></i>
                Add F0
            </button>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-md-12">
            <table id="dtBasicExample" class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Identity card number</th>
                        <th scope="col">Status</th>
                        <th scope="col">Place of treatment</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each patients}}
                    <tr>
                        <th scope="row">{{Name}}</th>
                        <td>{{IdNumber}}</td>
                        <td>
                            {{#ifStr Status 0 }}<span
                                class="bg-danger text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                            {{#ifStr Status 1 }}<span
                                class="bg-warning text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                            {{#ifStr Status 2 }}<span
                                class="bg-primary text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                            {{#ifStr Status 3 }}<span
                                class="bg-success text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                        </td>
                        <td>{{Place.NamePlace}}</td>
                        <td>
                            <button class="btn btn-sm p-0" data-toggle="modal" data-target="#detailPatient{{Id}}">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </button>
                            {{#ifNotStr Status 3}}
                            <button class="btn btn-sm p-0" data-toggle="modal" data-target="#addRelatedPatient{{Id}}">
                                <i class="fa fa-user-plus" aria-hidden="true"></i>
                            </button>
                            {{/ifNotStr}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div>
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item  {{#unless can_go_prev}} disabled {{/unless}}">
                    <a class="page-link" href="?page={{prev_value}}" aria-label="Previous">
                        <span aria-hidden="true">Previous</span>
                    </a>
                </li>
                {{#each this.page_items }}
                {{#if isActive}}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">{{value}}</span>
                </li>
                {{else}}
                <li class="page-item {{#if isDisabled}} disabled {{/if}}"><a class="page-link"
                        href="?page={{value}}">{{value}}</a></li>
                {{/if}}
                {{/each}}
                <li class="page-item  {{#unless can_go_next}} disabled {{/unless}}">
                    <a class="page-link" href="?page={{next_value}}" aria-label="Next">
                        <span aria-hidden="true">Next</span>
                    </a>
                </li>

            </ul>
        </nav>
    </div>

</div>
