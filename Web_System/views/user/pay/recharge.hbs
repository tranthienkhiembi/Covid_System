    /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to bottom, #2ADBD0, #41F65C);
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    float: left;
    width: 100%;
    width: 100%;
    height: 949px;
    padding: 50px 0;
  }

  .banner-sec {
    background: url(/assets/login/images/ic_system.png);
    background-size: auto;
    background-repeat: no-repeat;
    min-height: 650px;
    margin-top: 50px;
    border-radius: 0 10px 10px 0;

  }

  .container {
    background: rgba(254, 255, 254, 0.75);
    border-radius: 10px;
    box-shadow: 15px 20px 0px rgba(0, 0, 0, 0.1);
    border-radius: 20px;
  }

  .carousel-inner {
    border-radius: 0 10px 10px 0;
  }

  .carousel-caption {
    text-align: left;
    left: 5%;
  }

  .login-sec {
    padding: 20px 70px;
    position: relative;
  }

  .login-sec .copy-text {
    position: absolute;
    width: 80%;
    bottom: 20px;
    font-size: 13px;
    text-align: center;
  }

  .login-sec .copy-text i {
    color: #2eb78e;
  }

  .login-sec .copy-text a {
    color: #2eb78e;
  }

  .login-sec h2 {
    margin-bottom: 30px;
    font-weight: 800;
    font-size: 30px;
    color: #2eb78e;
  }

  .login-sec h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #2eb78e;
    display: block;
    margin-top: 30px;
    border-radius: 3px;
    margin-left: auto;
    margin-right: auto
  }

  .btn-login {
    background: #2eb78e;
    color: #fff;
    font-weight: 600;
  }

  .banner-text {
    width: 70%;
    position: absolute;
    bottom: 40px;
    padding-left: 20px;
  }

  .banner-text h2 {
    color: #fff;
    font-weight: 600;
  }

  .banner-text h2:after {
    content: " ";
    width: 100px;
    height: 5px;
    background: #FFF;
    display: block;
    margin-top: 20px;
    border-radius: 3px;
  }

  .banner-text p {
    color: #fff;
  }

  .link-back {
    text-decoration: none;
  }

  .text2 {
    margin-bottom: 10px;
    font-weight: 800;
