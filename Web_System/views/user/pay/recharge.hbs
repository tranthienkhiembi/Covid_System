<section class="login-block">
  <div class="container">
    <div class="pt-3 ps-1">
      <a href="/user/pay/payment" class="link-info link-back h5"><i class="fas fa-chevron-left me-1"></i>Back</a>
    </div>
    <div class="row">
        <div class="col-md-5 login-sec" style="margin-top: 130px;">
            <h2 class="text-center">Recharge</h2>
           <form method="POST">
                <label class="sr-only" for="money"></label>
                 {{#if error}} <h5 style="color:red;"> Input money</h5> {{/if}}
                 {{errorSystem}}
                <div class="input-group mb-2">
                    <div class="input-group-text"><i class="fas fa-dollar-sign"></i></div>
                    <input type="number" class="form-control" id="money" name="money" min="10000" max="10000000" placeholder="Input money">
                    
                </div>
                <div class="checkRecharge mb-2 mt-2"></div>
                 <div class="text-center">
                    <button type="submit" class="btn btn-primary mx-auto" id="recharge" style="background: rgb(9, 209, 9)">Recharge</button>
                </div>
           </form>
        </div>
        <div class="col-md-7 banner-sec">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item">
                <img class="d-block img-fluid" src="/assets/login/images/forgot_pass.png" width="100px"
                    alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</section>

<script>
  var max = parseInt($("#money").attr('max'));
  var min = parseInt($("#money").attr('min'));

  function alert(message, type, element) {
      $(`.check${element}`).html('<div class="alert alert-' + type + ' d-flex align-items-center alert-dismissible" role="alert"> <i class="fas fa-exclamation-triangle me-1"></i> <div>' + message + '</div><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>');
  }
  $("#recharge").prop('disabled', true);
  $("#money").keyup(function() {
      if($(this).val().length != 0)
      { 
        if($(this).val() >= min && $(this).val() <= max){
          $('.checkRecharge').html('');
          $("#recharge").prop('disabled', false);
        }
        else {
          alert(`Input money above ${min} and below ${max} VNÄ!`, 'danger', 'Recharge');
          $("#recharge").prop('disabled', true);
        }
      }
      else
      {
        alert('Input money', 'danger', 'Recharge');
        $("#recharge").prop('disabled', true);
      }
  })
</script>