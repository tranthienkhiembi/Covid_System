<div class="modal fade" id="informAddPatientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header text-center mx-auto">
                <div>
                    <h1 class="fa fa-check-circle" style="color: green; font-size: 40px; width: 40px"></h1>
                </div>
                <div>
                    <h3 class="text-center">{{alert}}</h3>
                </div>
            </div>
            <div class="modal-body">
                <h4>Tên đăng nhập: {{username}}</h4>
                <h4>Mật khẩu: {{password}}</h4>
                <h4>Tên đăng nhập hệ thống thanh toán: {{idPayment}}</h4>
                <h4>Mật khẩu hệ thống thanh toán: {{password}}</h4>
            </div>
            <div class="modal-footer">
                <form action="/manager/patients" method="get">
                    <button class="btn btn-success btn-block" type="submit">OK</button>
                </form>
            </div>
        </div>
    </div>
</div>