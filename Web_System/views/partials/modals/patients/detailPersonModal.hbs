{{#each patients}}
<div class="modal" id="detailPatient{{Id}}" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Contact Person Details</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Name</label>
                            <h3>{{Name}}</h3>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Identity card number</label>
                            <h3>{{IdNumber}}</h3>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputPassword4">Year of Birth</label>
                            <h3>{{Year}}</h3>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputPassword4">Status</label>

                            <select id="inputStatus{{Id}}" class="form-control" name="status">
                                {{#ifStr Status 3}}

                                <option value="0">F0</option>
                                <option value="1">F1</option>
                                <option value="2">F2</option>
                                <option value="3" selected>F3</option>
                                {{/ifStr}}
                                {{#ifStr Status 2}}
                                <option value="0">F0</option>
                                <option value="1">F1</option>
                                <option value="2" selected>F2</option>
                                {{/ifStr}}
                                {{#ifStr Status 1}}
                                <option value="0">F0</option>
                                <option value="1" selected>F1</option>
                                {{/ifStr}}
                                {{#ifStr Status 0}}
                                <option value="0" selected>F0</option>
                                {{/ifStr}}


                            </select>
                        </div>
                    </div>
                    <hr />
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <h4>Accommodation</h4>
                        </div>
                    </div>
                    <div class="form-row border rounded mb-1">
                        <div class="form-group col-md-4 ">
                            <label for="inputEmail4">Province/city</label>
                            <h3>{{address.Province}}</h3>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">District</label>
                            <h3>{{address.District}}</h3>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputPassword4">Wards</label>
                            <h3>{{address.Ward}}</h3>
                        </div>
                    </div>
                    <hr />
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <h4>Place of treatment</h4>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <select id="inputPlace{{Id}}" class="form-control" name="place">
                                {{#each ../places}}
                                <option value={{Id}} {{#ifStr Id ../Place.Id}}selected{{/ifStr}}>{{NamePlace}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <h4>List of people involved</h4>
                        </div>
                    </div>
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Identity card number</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Place of treatment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each related}}
                                    <tr>
                                        <th scope="row">{{Name}}</th>
                                        <td>{{IdNumber}}</td>
                                        <td>
                                            {{#ifStr Status 0 }}<span
                                                class="bg-danger text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 1 }}<span
                                                class="bg-warning text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 2 }}<span
                                                class="bg-primary text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 3 }}<span
                                                class="bg-success text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                        </td>
                                        <td>{{Place.NamePlace}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <h4>Management history</h4>
                        </div>
                    </div>
                    <div class="form-row my-0">
                        <div class="form-group col-md-12 my-0">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Time</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Place of treatment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each history}}
                                    <tr>
                                        <th scope="row"> 
                                            {{dateFormat TimeStart "HH:mm, DD.MM.YYYY"}}
                                            - 
                                            {{#if TimeEnd}}
                                              {{dateFormat TimeEnd "HH:mm, DD.MM.YYYY"}}
                                            {{else}}
                                            nay
                                            {{/if}}

                                        </th>
                                        <td>
                                            {{#ifStr Status 0 }}<span
                                                class="bg-danger text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 1 }}<span
                                                class="bg-warning text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 2 }}<span
                                                class="bg-primary text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                            {{#ifStr Status 3 }}<span
                                                class="bg-success text-white rounded p-1">F{{Status}}</span>{{/ifStr}}
                                        </td>
                                        <td>{{Place.NamePlace}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" formaction="/manager/patients/update/{{Id}}" formmethod="post" class="btn btn-primary">Confirm</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/each}}