<div id="account">
    <div class="card" style="border: #7af1e7 solid 2px; background-color: #7af1e7;  border-radius:20px">
        <div class="card-header text-center bg-linear" style="border-top-left-radius: 20px; border-top-right-radius: 20px">
            <div class="row align-items-center">
                 <div class="col-md-2">
                    <a class="btn btn-primary float-left" style="color:rgb(35, 35, 35);" title="Back" id="create-user" href="/admin/accounts?page={{pageParent}}"
                        role="button">
                        <i class="fa fa-angle-left" aria-hidden="true"></i> 
                    </a>
                </div>
                <div class="col-md-8">
                    <i class="fa fa-history " aria-hidden="true" style="font-size: 25px;"></i>
                    <b style="font-size: 25px;">Operation history of {{username}}</b>
                </div>
               
            </div>
        </div>
         {{#if this.empty}}
            <div class="card-body">
                <p class="card-text">No data now.</p>
            </div>
        {{else}}
            <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Start time</th>
                        <th scope="col">End time</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.activityHistories}}
                        <tr>
                        <th scope="row">{{Stt}}</th>
                        <td>{{TimeStart}}</td>
                        <td>{{TimeEnd}}</td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="/admin/accounts/history/active?id={{IdHistory}}&&page={{../page}}&&username={{../username}}" role="button" title="Watch">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
        </div>
         {{/if}}
            <nav aria-label="..." class="mx-auto">
            <ul class="pagination mx-auto">
                <li class="page-item  {{#unless can_go_prev}} disabled {{/unless}}">
                <a class="page-link" href="?id={{id}}&&page={{prev_value}}&&username={{username}}" aria-label="Previous">
                    <span aria-hidden="true">Previous</span>
                </a>
                </li>
                {{#each this.page_items }}
                    {{#if isActive}}
                        <li class="page-item active" aria-current="page">
                        <span class="page-link">{{value}}</span>
                        </li>
                    {{else}}
                        <li class="page-item{{#if isDisabled}} disabled{{/if}}"><a class="page-link" href="?id={{../id}}&&page={{value}}&&username={{../username}}">{{value}}</a></li>
                    {{/if}}
                {{/each}}
                 <li class="page-item{{#unless can_go_next}} disabled{{/unless}}">
                     <a class="page-link" href="?id={{id}}&&page={{next_value}}&&username={{username}}" aria-label="Next">
                        <span aria-hidden="true">Next</span>
                    </a>
                </li> 
            </ul>
        </nav>
    </div>
</div>

